pipeline {
    agent none

    environment {
        DOCKER_COMPOSE_FILE = 'docker-compose.yml'
    }

    stages {
        stage('Checkout') {
            steps {
                // Use the credentialsId to access the GitHub repository
                git credentialsId: 'vlsTeam8Final', url: 'https://github.com/BS-PMC-2024/BS-PMC-2024-Team8.git'
            }
        }

        stage('Build Docker Images') {
            agent {
                docker {
                    image 'python:2-alpine'
                }
            }
            steps {
                script {
                    sh 'docker-compose -f $DOCKER_COMPOSE_FILE build'
                }
            }
        }
        stage('Run Docker Compose') {
            steps {
                script {
                    // Start Docker Compose services
                    sh 'docker-compose -f $DOCKER_COMPOSE_FILE up -d'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run npm tests in the frontend/vls directory
                    sh 'docker-compose exec frontend sh -c "cd vls && npm test"'
                }
            }
        }

        stage('Cleanup') {
            steps {
                script {
                    sh 'docker-compose -f $DOCKER_COMPOSE_FILE down'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
