pipeline {
    agent any

    environment {
        DOCKER_COMPOSE_FILE = 'docker-compose'
    }

    stages {
        stage('Checkout') {
            steps {
                git credentialsId: 'vlsTeam8Final', url: 'https://github.com/BS-PMC-2024/BS-PMC-2024-Team8.git'
            }
        }

    stage('Build Docker Images') {
            steps {
                script {
                    sh 'docker-compose -f $DOCKER_COMPOSE_FILE build'
                }
            }
        }

        stage('Run Docker Compose') {
            steps {
                script {
                    sh 'docker-compose -f $DOCKER_COMPOSE_FILE up -d'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh 'docker-compose exec frontend sh -c "cd vls && npm test"'
                }
            }
        }

        stage('Cleanup') {
            steps {
                script {
                    sh 'docker-compose -f $DOCKER_COMPOSE_FILE down'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
